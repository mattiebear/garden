<Layouts.app flash={@flash} current_scope={@current_scope}>
  <div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 flex items-center justify-center px-4">
    <div class="max-w-2xl text-center">
      <div class="mb-8">
        <h1 class="text-6xl font-bold text-emerald-800 mb-4">ğŸŒ± Garden</h1>
        <p class="text-xl text-emerald-600 leading-relaxed">
          Design, plant, and nurture your perfect digital garden
        </p>
      </div>

      <div class="space-y-6">
        <%= if @current_scope do %>
          <div class="bg-white rounded-lg shadow-lg p-8 border border-emerald-200">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">
              Welcome back, {@current_scope.user.email}!
            </h2>
            <p class="text-gray-600 mb-6">
              Ready to tend to your garden? Your plants are waiting for you.
            </p>
            <.link
              navigate="/garden"
              class="inline-flex items-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                >
                </path>
              </svg>
              Enter My Garden
            </.link>
          </div>
        <% else %>
          <div class="bg-white rounded-lg shadow-lg p-8 border border-emerald-200">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">
              Start Your Garden Journey
            </h2>
            <p class="text-gray-600 mb-6">
              Create an account to begin designing your perfect garden space.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <.link
                href="/users/register"
                class="inline-flex items-center justify-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
              >
                Get Started
              </.link>
              <.link
                href="/users/log_in"
                class="inline-flex items-center justify-center px-6 py-3 bg-white hover:bg-gray-50 text-emerald-600 font-semibold rounded-lg border-2 border-emerald-600 transition-colors duration-200"
              >
                Sign In
              </.link>
            </div>
          </div>
        <% end %>

        <div class="text-emerald-600">
          <p class="text-sm">
            Plant seeds, watch them grow, and create beautiful landscapes
          </p>
        </div>
      </div>
    </div>
  </div>
</Layouts.app>
